@page
@model ServiceHost.Pages.AccountModel
@{
    ViewData["title"] = "ثبت نام و ورود";
}

    


<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">ورود - ثبت نام</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">صقحه اصلی</a></li>
                            <li class="active">فرم ورود و ثبت نام</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6">
                                <form method="post" asp-page-handler="SignIn">
                                    @if (Model.Message != null)
                                    {
                                        <h4 class="text-danger">@Model.Message</h4>
                                    }
                                    <div class="login-form">
                                        <h4 class="login-title">ورود</h4>
                                        <div class="row">
                                            <div class="col-md-12 col-12">
                                                <label asp-for="@Model.Command.UserName">نام کاربری</label>
                                                <input type="text" asp-for="@Model.Command.UserName" placeholder="نام کاربری">
                                                <span asp-validation-for="@Model.Command.UserName" class="error"></span>
                                            </div>
                                            <div class="col-12">
                                                <label asp-for="@Model.Command.Password">پسوورد</label>
                                                <input type="password" asp-for="@Model.Command.Password" placeholder="رمز عبور">
                                                <span asp-validation-for="@Model.Command.Password" class="error"></span>
                                            </div>
                                            <div class="col-sm-6">


                                            </div>

                                            <div class="col-sm-6 text-left text-sm-right">
                                                <a href="#" class="forget-pass-link">فراموشی رمز عبور </a>
                                            </div>

                                            <div class="col-md-12">
                                                <button class="register-button">ورود</button>
                                            </div>

                                        </div>
                                    </div>

                                </form>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                                <form action="#">

                                    <div class="login-form">
                                        <h4 class="login-title">ثبت نام</h4>

                                        <div class="row">
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>نام و نام خانوادگی</label>
                                                <input type="text" placeholder="نام کامل">
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>نام کاربری</label>
                                                <input type="text" placeholder="نام کاربری">
                                            </div>
                                            <div class="col-md-12 mb-20">
                                                <label>موبایل</label>
                                                <input type="tel" placeholder="موبایل">
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label>رمز عبور</label>
                                                <input type="password" placeholder="رمز عبور">
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label>تکرار رمز عبور</label>
                                                <input type="password" placeholder="تکرار رمز عبور">
                                            </div>
                                            <div class="col-12">
                                                <button class="register-button mt-0">ثبت نام</button>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Validation {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>

}