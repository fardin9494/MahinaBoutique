@page
@model ServiceHost.Pages.SearchProductModel
@{
    ViewData["Title"] = "جستجو در محصولات";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  breadcrumb wrpapper  =======-->
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <!--=======  breadcrumb content  =======-->
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">نتیجه جستجو برای : @Model.Value</h2>
                    </div>
                    <!--=======  End of breadcrumb content  =======-->
                </div>
                <!--=======  End of breadcrumb wrpapper  =======-->
            </div>
        </div>
    </div>
</div>
<!--====================  End of breadcrumb area  ====================-->
<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  shop page wrapper  =======-->
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            

                            <div class="col-lg-12">
                                <!--=======  shop page content  =======-->
                                <div class="shop-page-content">

                                    <div class="row shop-product-wrap grid three-column">

                                        @foreach (var product in Model.Products)
                                        {

                                            <div class="col-12 col-lg-4 col-md-4 col-sm-6">
                                                <!--=======  product grid view  =======-->
                                                <div class="single-grid-product grid-view-product">
                                                    <div class="single-grid-product__image">
                                                        <div class="single-grid-product__label">
                                                            @if (product.HaveDiscount)
                                                            {
                                                                <span class="sale">@product.DiscountRate%</span>
                                                            }
                                                        </div>
                                                        <a href="single-product.html">
                                                            <img src="@product.Picture" class="img-fluid"
                                                                 alt="@product.PictureAlt" title="@product.PictureTitle">
                                                        </a>
                                                    </div>
                                                    <div class="single-grid-product__content">
                                                        <div class="single-grid-product__category-rating">
                                                            <span class="category">
                                                                <a href="shop-left-sidebar.html">Decor</a>
                                                            </span>
                                                            <span class="rating">
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star-outline"></i>
                                                            </span>
                                                        </div>

                                                        <h3 class="single-grid-product__title">
                                                            <a asp-page="/ProductDetails">
                                                                @product.Name
                                                            </a>
                                                        </h3>
                                                        <p class="single-grid-product__price">
                                                            @if (product.HaveDiscount)
                                                            {
                                                                <span class="discounted-price">@product.PriceAfterDiscount</span>
                                                                <span class="main-price discounted">@product.Price</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="main-price">@product.Price</span>
                                                            }
                                                        </p>
                                                        <div class="product-countdown" data-countdown="@product.ExpireDiscountTime"></div>
                                                    </div>
                                                </div>
                                                <!--=======  End of product grid view  =======-->

                                            </div>


                                        }

                                    </div>

                                </div>

                                <!--=======  pagination area =======-->
                                
                                <!--=======  End of pagination area  =======-->
                                <!--=======  End of shop page content  =======-->
                            </div>
                        </div>
                    </div>
                </div>
                <!--=======  End of shop page wrapper  =======-->
            </div>
        </div>
    </div>
</div>
