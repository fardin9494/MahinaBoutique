@model List<MahinaBoutique.Query.Contract.ProductCategory.ProductCategoryQueryModel>

    <div class="category-wrapper">
        <div class="row row-10 masonry-category-layout">
            @foreach (var category in Model)
            {
                <div class="col-lg-4 col-sm-6 grid-item">
                    <!--=======  single category item  =======-->
                    <div class="single-category-item">
                        <div class="single-category-item__image">
                            <a asp-page="/ProductCategory" asp-route-id="@category.Slug">
                                <img src="@category.Image" class="img-fluid" alt="@category.ImageAlt" title="@category.ImageTitle">
                            </a>
                        </div>
                        <div class="single-category-item__content">
                            <h3 class="title">@category.Name</h3>
                            <a  asp-page="/ProductCategory" asp-route-id="@category.Slug">
                                <i class="ion-android-arrow-dropleft-circle"></i> خرید
                            </a>
                        </div>
                    </div>
                    <!--=======  End of single category item  =======-->
                </div>
            }

        </div>
    </div>